{
  "permissions": {
    "allow": [
      "Bash(for file in backend/src/*.lisp backend/*.lisp)",
      "Bash(do [ -f \"$file\" ])",
      "Bash(echo:*)",
      "Bash(./format-lisp.ros:*)",
      "Bash(done)",
      "Bash(sblint:*)",
      "Bash(git reset:*)",
      "Bash(git add:*)",
      "Bash(git commit -m \"$(cat <<''EOF''\nfeat: Add setup-hooks.sh script for worktrees\n\nThis script makes it easy to install git pre-commit hooks in new worktrees.\n\nUsage: ./setup-hooks.sh\n\nðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)\n\nCo-Authored-By: Claude <noreply@anthropic.com>\nEOF\n)\")",
      "Bash(git push)",
      "mcp__task-master-ai__get_tasks",
      "mcp__task-master-ai__set_task_status",
      "mcp__task-master-ai__add_task"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "task-master-ai"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.lisp)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-lisp-edit.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Edit(*.lisp)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-lisp-edit.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
